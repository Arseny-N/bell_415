#!/bin/bash

step=$1
list_file=$2
sql_file=$3
if [ ! $step ]; then step=$((60*60)); fi
if [ ! $list_file ]; then list_file='acid_table.list'; fi
if [ ! $sql_file ]; then sql_file='acid_table.sql';fi




cnt=0
stop=$((24*60*60))
query_start="INSERT INTO rings (ring_duration,profile_id,ring_time)
             VALUES(DEFAULT(ring_duration), '1', '"
query_end="');"

:> $list_file
:> $sql_file

while [ $cnt -le $stop ]; do
    date -u -d@$cnt +'%T' >> $list_file
    echo $query_start$(date -u -d@$cnt +'%T')$query_end >> $sql_file
    cnt=$(( $cnt + $step ));		
done;


